<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.acesconn.acesmportal.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coming Soon!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtn_app_01"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/app_contacts"
        android:scaleType="centerInside"
        android:contentDescription="@string/act_title_contacts"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/act_title_contacts"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_app_01"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/ibtn_app_02"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/app_contacts"
        android:scaleType="centerInside"
        android:contentDescription="@string/act_title_contactapi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ibtn_app_01"
        android:layout_marginStart="0.5dp"
        android:layout_marginLeft="0.5dp"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/act_title_contactapi"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_app_02"
        app:layout_constraintLeft_toRightOf="@+id/ibtn_app_01" />

    <ImageButton
        android:id="@+id/ibtn_app_03"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/ic_menu_gallery"
        android:contentDescription="@string/main_app_03"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ibtn_app_02"
        android:layout_marginStart="0.5dp"
        android:layout_marginLeft="0.5dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/pbbar" />

</android.support.constraint.ConstraintLayout>
